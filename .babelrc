{
  "presets": [
    ["env", {
      "modules": false,
      "targets": {"browsers": ["> 1%", "last 2 versions", "not ie <= 8"]}
    }],
    "stage-2"
  ],
  "comments": false,
  "plugins": [
    "transform-runtime", 
    "syntax-dynamic-import", 
    "transform-vue-jsx",
    ["import", {
      "libraryName": "vant",
      "libraryDirectory": "es",
      "style": true
    }]
  ],
  "env": {
    "test": {
      "presets": ["env", "stage-2"],
      "plugins": ["istanbul"]
    }
  }
}
